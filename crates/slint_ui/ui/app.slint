import { Button, VerticalBox, HorizontalBox, ProgressIndicator, ScrollView } from "std-widgets.slint";
import { HomeTab } from "tabs/HomeTab.slint";
import { ProjectTab } from "tabs/ProjectTab.slint";
import { EntitiesTab } from "tabs/EntitiesTab.slint";
import { FeaturesTab } from "tabs/FeaturesTab.slint";
import { GenerateTab } from "tabs/GenerateTab.slint";

// Import and export globals for Rust access
import { ManifestCommands, UndoRedoCommands, ProjectCommands, FeatureCommands, GenerateCommands, EntitiesTabState, AppState } from "globals.slint";
export { ManifestCommands, UndoRedoCommands, ProjectCommands, FeatureCommands, GenerateCommands, EntitiesTabState, AppState }

// Custom NavItem component for sidebar navigation
component NavItem inherits Rectangle {
    in property <bool> active: false;
    in property <string> label;
    in property <image> icon;
    callback clicked();

    height: 48px;
    background: active ? #228be6 : transparent;
    border-radius: 8px;

    HorizontalLayout {
        padding: 12px;
        spacing: 12px;

        Image {
            source: icon;
            width: 24px;
            height: 24px;
            colorize: active ? #ffffff : #495057;
        }

        Text {
            text: label;
            color: active ? #ffffff : #495057;
            font-size: 14px;
            vertical-alignment: center;
        }
    }

    TouchArea {
        clicked => { root.clicked(); }
    }
}

export component App inherits Window {
    title: "Qleany";
    min-width: 1000px;
    min-height: 900px;


    // All state and callbacks are now in globals (AppState, ManifestCommands, etc.)
    // See globals.slint for the complete list

    Rectangle {
        background: #f8f9fa;

        VerticalLayout {
            // Header Bar
            Rectangle {
                height: 60px;
                background: #ffffff;
                drop-shadow-blur: 4px;
                drop-shadow-color: #00000020;
                drop-shadow-offset-y: 2px;

                HorizontalLayout {
                    padding: 16px;
                    spacing: 12px;

                    Text {
                        text: "Qleany";
                        font-size: 24px;
                        font-weight: 700;
                        vertical-alignment: center;
                        color: #212529;
                    }

                    // Undo button
                    Rectangle {
                        width: 36px;
                        height: 36px;
                        background: AppState.can_undo ? #228be6 : #dee2e6;
                        border-radius: 4px;

                        Text {
                            text: "↩";
                            font-size: 18px;
                            color: AppState.can_undo ? #ffffff : #868e96;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        TouchArea {
                            enabled: AppState.can_undo;
                            clicked => { UndoRedoCommands.undo(); }
                        }
                    }

                    // Redo button
                    Rectangle {
                        width: 36px;
                        height: 36px;
                        background: AppState.can_redo ? #228be6 : #dee2e6;
                        border-radius: 4px;

                        Text {
                            text: "↪";
                            font-size: 18px;
                            color: AppState.can_redo ? #ffffff : #868e96;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        TouchArea {
                            enabled: AppState.can_redo;
                            clicked => { UndoRedoCommands.redo(); }
                        }
                    }

                    // Save button
                    Rectangle {
                        width: 70px;
                        height: 36px;
                        background: #228be6;
                        border-radius: 4px;

                        Text {
                            text: "Save";
                            font-size: 14px;
                            color: #ffffff;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        TouchArea {
                            clicked => { ManifestCommands.save_manifest(); }
                        }
                    }

                    // Spacer
                    Rectangle { horizontal-stretch: 1; }
                }
            }

            // Main content area with sidebar
            HorizontalLayout {
                // Left Sidebar Navigation
                Rectangle {
                    width: 200px;
                    background: #f8f9fa;

                    VerticalLayout {
                        padding: 8px;
                        spacing: 4px;
                        alignment: start;

                        NavItem {
                            label: "Home";
                            icon: @image-url("icons/home.svg");
                            active: AppState.current_tab == 0;
                            clicked => { AppState.current_tab = 0; }
                        }

                        NavItem {
                            label: "Project";
                            icon: @image-url("icons/tag.svg");
                            active: AppState.current_tab == 1;
                            clicked => { AppState.current_tab = 1; }
                        }

                        NavItem {
                            label: "Entities";
                            icon: @image-url("icons/entities.svg");
                            active: AppState.current_tab == 2;
                            clicked => { AppState.current_tab = 2; }
                        }

                        NavItem {
                            label: "Entity Map";
                            icon: @image-url("icons/sitemap.svg");
                            active: AppState.current_tab == 3;
                            clicked => { AppState.current_tab = 3; }
                        }

                        NavItem {
                            label: "Features";
                            icon: @image-url("icons/features.svg");
                            active: AppState.current_tab == 4;
                            clicked => { AppState.current_tab = 4; }
                        }

                        NavItem {
                            label: "Generate";
                            icon: @image-url("icons/factory.svg");
                            active: AppState.current_tab == 5;
                            clicked => { AppState.current_tab = 5; }
                        }

                        // Spacer
                        Rectangle { vertical-stretch: 1; }
                    }
                }

                // Main Content Area
                Rectangle {
                    background: #ffffff;
                    border-radius: 8px;

                    // Tab components now use globals directly for state and callbacks
                    if AppState.current_tab == 0 : HomeTab { }

                    if AppState.current_tab == 1 : ProjectTab { }

                    if AppState.current_tab == 2 : EntitiesTab { }

                    // Entity Map tab placeholder
                    if AppState.current_tab == 3 : Rectangle {
                        VerticalBox {
                            padding: 16px;
                            Text {
                                text: "Entity Map";
                                font-size: 24px;
                                font-weight: 700;
                                color: #212529;
                            }
                            Text {
                                text: "Entity relationship visualization coming soon...";
                                font-size: 14px;
                                color: #495057;
                            }
                        }
                    }

                    if AppState.current_tab == 4 : FeaturesTab { }

                    if AppState.current_tab == 5 : GenerateTab { }
                }
            }

            // Status bar at the bottom
            Rectangle {
                height: AppState.error_message != "" ? 32px : 0px;
                background: #ffffff;
                
                HorizontalLayout {
                    padding-left: 16px;
                    padding-right: 16px;
                    alignment: start;
                    
                    Text {
                        text: AppState.error_message;
                        color: #000000;
                        font-size: 14px;
                        vertical-alignment: center;
                    }
                }
            }
        }

        // Global loading overlay
        if AppState.is_loading : Rectangle {
            background: #00000040;
            x: 0px;
            y: 0px;
            width: parent.width;
            height: parent.height;

            ProgressIndicator {
                width: 48px;
                height: 48px;
                x: (parent.width - self.width) / 2;
                y: (parent.height - self.height) / 2;
                indeterminate: true;
            }
        }
    }
}
